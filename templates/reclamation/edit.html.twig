{% extends 'base.html.twig' %}

{% block title %}New Reclamation
{% endblock %}

{% block body %}

	<main id="main" class="main">
		<section class="section">
			<div class="row">
				<div class="col-lg-12">

					<div class="card">
						<div class="card-body">
							<h1>Create new Reclamation</h1>
							{{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

							<table class="table">
								<tr>
									<td>
										{{ form_label(form.objectif,"objectif : ") }}
									</td>
									<td>
										{{ form_widget(form.objectif) }}
									</td>
									<td>{{ form_errors(form.objectif) }}</td>
								</tr>


								<tr>
									<td>
										{{ form_label(form.text,"text : ") }}
									</td>
									<td>
										{{ form_widget(form.text) }}
									</td>
									<td>{{ form_errors(form.text) }}</td>
								</tr>
								<tr>
									<td>
										{{ form_label(form.etat,"etat : ") }}
									</td>
									<td>
										{{ form_widget(form.etat) }}
									</td>
									<td>{{ form_errors(form.etat) }}</td>
								</tr>
								<tr>
									<td>
										{{ form_label(form.iduser,"iduser : ") }}
									</td>
									<td>
										{{ form_widget(form.iduser) }}
									</td>
									<td>{{ form_errors(form.iduser) }}</td>
								</tr>

								{{ form_row(form.Submit) }}
								{{ form_end(form) }}
							</table>
						</div>
					</div>
				</div>

			</div>

		</section>
	</main>
{% endblock %}

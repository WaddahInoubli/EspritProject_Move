{% extends 'base.html.twig' %}

{% block title %}Reponse index
{% endblock %}

{% block body %}

	<main id="main" class="main">
		<section class="section">
			<div class="row">
				<div class="col-lg-12">

					<div class="card">
						<div class="card-body">
							<h1>Reponse index</h1>

							<table class="table">
								<thead>
									<tr>
										<th>Id</th>
										<th>Objectif</th>
										<th>Texte</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for reponse in reponses %}
										<tr>
											<td>{{ reponse.id }}</td>
											<td>{{ reponse.objectif }}</td>
											<td>{{ reponse.texte }}</td>
											<td>
												<a href="{{ path('app_reponse_show', {'id': reponse.id}) }}">show</a>
												<a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">edit</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="4">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>

							<a href="{{ path('app_reponse_new') }}">Create new</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	{% endblock %}
